@model User
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h1 mt-3">Details</div>

<div class="container-fluid mb-3">
    <div class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @if (Model.FullName.Equals(string.Empty))
            {
                <text>N/A</text>
            }
            else
            {
            @Html.DisplayFor(model => model.FullName)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.Gender)
            {
                case 0:
                    <text>Không xác định</text>
                    break;
                case 1:
                    <text>Nam</text>
                    break;
                case 2:
                    <text>Nữ</text>
                    break;
                default:
                    <text>Không xác định</text>
                    break;
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.ValueFor(model => model.BirthDate, "{0:dd/MM/yyyy}")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </div>

</div>



