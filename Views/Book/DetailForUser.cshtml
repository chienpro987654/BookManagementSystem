@model BookReadViewModel

@{
    ViewData["Title"] = "DetailForUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DetailForUser</h1>

<div class="container mt-3">
    <div class="row">
        <div class="col-4 text-center">
            <img src="~/images/@Model.Book.ImageName" class="w-100" style="object-fit:contain" />
        </div>
        <div class="col-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Description)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.AuthorId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Author.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Categories)
                </dt>
                <dd class="col-sm-10">
                    @foreach (var item in Model.Book.Categories)
                    {
                        <text><a asp-controller="Category" asp-action="Details" asp-route-Id="@item.Id">@item.Name</a> </text>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.PublishDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.PublishDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.CreatedAt)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.CreatedAt)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.UpdatedAt)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.UpdatedAt)
                </dd>
            </dl>
            <a class="btn btn-primary" asp-controller="Book" asp-action="Read" asp-route-Id="@Model.Book.Id" asp-route-Page="0">Read</a>
            <div class="row">
                @for (int i = 0; i < Model.ArrIndexStart.Count; i++)
                {
                    <a class="col-3" asp-controller="Book" asp-action="Read" asp-route-Id="@Model.Book.Id" asp-route-Page="@i">Chapter @(i + 1)</a>
                }
            </div>
        </div>
    </div>
</div>